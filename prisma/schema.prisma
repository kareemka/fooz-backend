// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id      String    @id @default(uuid())
  slug    String    @unique
  name    String
  image   String?
  products Product[]
}

model Product {
  id            String             @id @default(uuid())
  slug          String             @unique
  name          String
  description   String?
  price         Float              @default(0)
  discountPercentage Float? // 0-100 percentage discount
  stock         Int                @default(0)
  isActive      Boolean            @default(true)
  categoryId    String?
  category      Category?          @relation(fields: [categoryId], references: [id])
  mainImage     String
  galleryImages String[]
  glbFileUrl    String?            // URL for 3D/AR model
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  
  // Relations
  colors        Color[]
  sizes         ProductSize[]
  accessories   Accessory[]
  orderItems    OrderItem[]
}

model ProductSize {
  id         String   @id @default(uuid())
  name       String
  dimensions String?
  price      Float
  productId  String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Accessory {
  id        String    @id @default(uuid())
  name      String
  price     Float
  image     String?
  products  Product[]
}

model Color {
  id       String    @id @default(uuid())
  name     String
  image    String?
  products Product[]
}

model Faq {
  id        String   @id @default(uuid())
  question  String
  answer    String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

model Coupon {
  id              String       @id @default(uuid())
  code            String       @unique
  discountType    DiscountType
  discountValue   Float
  expiryDate      DateTime?
  minOrderAmount  Float?
  isActive        Boolean      @default(true)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Order {
  id              String      @id @default(uuid())
  orderNumber     String      @unique
  customerName    String
  customerPhone   String
  shippingAddress String
  totalAmount     Float
  discountAmount  Float       @default(0)
  couponCode      String?
  status          OrderStatus @default(PENDING)
  items           OrderItem[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float   // Captures the price at the time of order
  
  // Optional: capture selected variants
  colorName String?
  colorImage String?
  sizeName  String?
  sizeDimensions String?

  // Accessories
  accessories OrderItemAccessory[]
}

model OrderItemAccessory {
  id          String    @id @default(uuid())
  orderItemId String
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  name        String
  price       Float
  image       String?
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Banner {
  id          String   @id @default(uuid())
  title       String?
  image       String
  link        String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
